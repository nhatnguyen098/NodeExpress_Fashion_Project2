{{>header}}

<!-- breadcrumb -->
<div class="container">
	<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
		<a href="/" class="stext-109 cl8 hov-cl1 trans-04">
			{{__ "Home"}}
			<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
		</a>

		<span class="stext-109 cl4">
			{{__ "Shoping Cart"}}
		</span>
	</div>
</div>


<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
	<div class="container">
		{{#if products}}
		<div class="row">
			<div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
				<div class="m-l-25 m-r--38 m-lr-0-xl">
					<div class="wrap-table-shopping-cart">
						<table class="table-shopping-cart">
							<tr class="table_head">
								<th class="column-1">{{__ "Product"}}</th>
								<th class="column-3"></th>
								<th class="column-3">{{__ "Size"}}</th>
								<th class="column-3">{{__ "Price"}}</th>
								<th class="column-3">{{__ "Quantity"}}</th>
								<th class="column-3">{{__ "Total"}}</th>
								<th class="column-3">{{__ "Delete"}}</th>
							</tr>
							{{#each products}}
							<tr class="table_row">
								<td class="column-1">
									<div class="how-itemcart1">
										<img src="/images/{{this.item.imagePath}}" alt="IMG">
									</div>
								</td>
								<td class="column-3">{{this.item.title}}</td>
								<td class="column-3">{{this.size}}</td>
								<td class="column-3">{{this.item.price}}</td>
								<td class="column-3">
									{{this.qty}}
								</td>
								<td class="column-3">$ {{this.price}}</td>
								<td class="column-3" style="padding-bottom:30px">
									<div class="dropdown">
										<button type="button" class="btn btn-danger dropdown-toggle"
											data-toggle="dropdown">
											<i class="fa fa-trash" aria-hidden="true"></i>
										</button>
										<div class="dropdown-menu">
											<a class="dropdown-item" href="/cart/reduceByOne/{{this.item._id}}_{{this.size}}">{{__ "Reduce
												by 1"}}</a>
											<a class="dropdown-item" href="/cart/removeAll/{{this.item._id}}_{{this.size}}">{{__ "Remove
												all"}}</a>
										</div>
									</div>
								</td>

							</tr>
							{{/each}}
						</table>
					</div>

					<div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
						{{#if messages}}
						<div class="alert alert-danger">
							<strong>{{messages}}</strong>
						</div>
						{{/if}}
						<form action="/cart/shopping-cart" method="get">
							<div class="flex-w flex-m m-r-20 m-tb-5">
								<input id="couponCode" name="couponCode"
									class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text"
									placeholder="{{__ "Coupon Code"}}" required>
								<button
									class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
									{{__ "Apply coupon"}}
								</button>
							</div>

						</form>
						<a href="/product/product-more"
							class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
							{{__ "Continue shopping"}}
						</a>
					</div>
				</div>
			</div>

			<div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
				<div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
					<h4 class="mtext-109 cl2 p-b-30">
						{{__ "Cart Totals"}}
					</h4>

					<div class="flex-w flex-t bor12 p-b-13 form-group">
						<div class="size-208">
							<span class="stext-110 cl2">
								{{__ "Subtotal"}}:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								$ {{this.totalPrice}}
							</span>
						</div>

					</div>
					{{#if couponCodes}}
					<div class="flex-w flex-t bor12 p-b-13 form-group">
						<div class="size-208">
							<span class="stext-110 cl2">
								{{__ "Discount"}}:
							</span>
						</div>

						<div class="size-209">
							<span class="mtext-110 cl2">
								{{couponCodes.description}}
							</span>
						</div>
					</div>
					{{/if}}
					<div class="flex-w flex-t bor12 p-t-15 p-b-30">
						<div class="size-208 w-full-ssm">
							<span class="stext-110 cl2">
								{{__ "Shipping"}}:
							</span>
						</div>

						<div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
							<p class="stext-111 cl6 p-t-2">
								There are no shipping methods available. Please double check your address, or
								contact us
								if you need any help.
							</p>

							<div class="p-t-15">

								{{!-- 
								<div class="flex-w">
									<div
										class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer">
										Update Totals
									</div>
								</div> --}}

							</div>
						</div>
					</div>

					<div class="flex-w flex-t p-t-27 p-b-33 form-group">
						<div class="size-208">
							<span class="mtext-101 cl2">
								{{__ "Total"}}:
							</span>
						</div>

						<div class="size-209 p-t-1">
							<span class="mtext-110 cl2">
								{{#if priceDiscount}}
								$ {{this.priceDiscount}}
								{{else}}
								{{this.totalPrice}}
								{{/if}}
							</span>
						</div>
					</div>

					<a href="/order/check-out"
						class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
						{{__ "Proceed to Checkout"}}
					</a>
				</div>
			</div>
		</div>
		{{else}}
		<div class="container-fluid text-center">
			<h3 class="form-text text-muted text-center">
				{{__ "No items in shopping cart."}}
			</h3>
			{{!-- <div class="offset-sm-2 col-sm-10">
				<button type="submit" class="btn btn-danger">Back to Home Page</button>
			</div> --}}
		</div>

		{{/if}}
	</div>
</form>





{{>footer}}